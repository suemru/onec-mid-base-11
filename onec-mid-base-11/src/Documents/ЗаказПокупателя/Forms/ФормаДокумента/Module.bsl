	МояКнопка.Заголовок = "Пересчитать таблицу";
	МояКнопка.ИмяКоманды = "ПересчитатьТаблицу";
	
	Элементы.сэр_СогласованнаяСкидка.УстановитьДействие("ПриИзменении", "СогласованнаяСкидкаПриИзменении");
	
	
